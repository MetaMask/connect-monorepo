{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "composite": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@metamask/multichain": ["../multichain/src/index.node.ts"],
      "@metamask/*": ["../*/src"],
      "src/*": ["../multichain/src/*"]
    }
  },
  "references": [
    { "path": "../multichain" },
    { "path": "../multichain/tsconfig.build.json" }
  ],
  "include": ["./src"]
}
