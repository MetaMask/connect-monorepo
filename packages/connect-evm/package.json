{
  "name": "@metamask/connect-evm",
  "version": "0.1.0",
  "description": "EVM Layer for MetaMask Connect",
  "keywords": [
    "MetaMask",
    "Ethereum"
  ],
  "homepage": "https://github.com/MetaMask/metamask-connect-monorepo/tree/main/packages/connect-evm#readme",
  "bugs": {
    "url": ""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/metamask-connect-monorepo.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/browser/es/index.d.ts",
      "import": "./dist/browser/es/connect-evm.mjs",
      "default": "./dist/browser/es/connect-evm.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/browser/es/connect-evm.mjs",
  "module": "./dist/browser/es/connect-evm.mjs",
  "browser": "./dist/browser/es/connect-evm.mjs",
  "types": "./dist/browser/es/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "yarn clean && tsc -b tsconfig.types.json --force && npx tsup",
    "build:docs": "typedoc",
    "changelog:update": "../../scripts/update-changelog.sh @metamask/connect-evm",
    "changelog:validate": "../../scripts/validate-changelog.sh @metamask/connect-evm",
    "clean": "npx rimraf ./dist",
    "dev": "tsup --watch",
    "publish:preview": "yarn npm publish --tag preview",
    "since-latest-release": "../../scripts/since-latest-release.sh",
    "test": "vitest run",
    "test:ci": "vitest run --coverage --coverage.reporter=text --silent",
    "test:unit": "vitest run",
    "test:verbose": "vitest run --reporter=verbose",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@metamask/connect-multichain": "workspace:^"
  },
  "devDependencies": {
    "@metamask/auto-changelog": "^3.4.4",
    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.0",
    "typedoc": "^0.23.22",
    "typedoc-plugin-missing-exports": "^1.0.0",
    "typescript": "~5.9.2",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": "^18.18 || >=20"
  }
}
