{
  "name": "@metamask/connect-evm",
  "version": "0.1.2",
  "description": "EVM Layer for MetaMask Connect",
  "keywords": [
    "MetaMask",
    "Ethereum"
  ],
  "homepage": "https://github.com/MetaMask/connect-monorepo/tree/main/packages/connect-evm#readme",
  "bugs": {
    "url": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MetaMask/connect-monorepo.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "commonjs",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/types/index.d.mts",
        "import": "./dist/browser/es/connect-evm.mjs"
      },
      "import": {
        "types": "./dist/types/index.d.mts",
        "default": "./dist/browser/es/connect-evm.mjs"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/node/cjs/connect-evm.js"
      },
      "default": "./dist/node/cjs/connect-evm.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/node/cjs/connect-evm.js",
  "module": "./dist/browser/es/connect-evm.mjs",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "attw": "attw --pack .",
    "build": "yarn tsup && cp dist/types/index.d.ts dist/types/index.d.mts && cp dist/types/index.d.ts dist/types/index.d.cts",
    "build:docs": "typedoc",
    "changelog:format": "../../scripts/format-changelog.sh @metamask/connect-evm",
    "changelog:update": "../../scripts/update-changelog.sh @metamask/connect-evm",
    "changelog:validate": "../../scripts/validate-changelog.sh @metamask/connect-evm",
    "clean": "npx rimraf ./dist",
    "dev": "tsup --watch ",
    "publint": "publint",
    "publish:preview": "yarn npm publish --tag preview",
    "since-latest-release": "../../scripts/since-latest-release.sh",
    "test": "vitest run",
    "test:ci": "vitest run --coverage --coverage.reporter=text --silent",
    "test:unit": "vitest run",
    "test:verbose": "vitest run --reporter=verbose",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@metamask/analytics": "workspace:^",
    "@metamask/chain-agnostic-permission": "^1.2.2",
    "@metamask/connect-multichain": "workspace:^",
    "@metamask/utils": "^11.8.1"
  },
  "devDependencies": {
    "@metamask/auto-changelog": "^3.4.4",
    "@types/jsdom": "^21.1.7",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-missing-exports": "^4.1.2",
    "typescript": "^5.9.3",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
