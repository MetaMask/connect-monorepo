{
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "target": "es6",
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.build.tsbuildinfo",
    "lib": ["DOM", "ES2020"],
    "skipLibCheck": true,
    "types": ["node"],
    "noEmit": false
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "dist",
    "./tests",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "references": []
}
