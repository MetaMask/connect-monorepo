  },
  "license": "MIT",
  "main": "expo-router/entry",
  "types": "./dist/index.d.cts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "allow-scripts": "",
    "android": "yarn copy-wagmi-connector && expo start --android",
    "build": "yarn copy-wagmi-connector && echo 'builds via expo'",
    "changelog:format": "../../scripts/format-changelog.sh @metamask/react-native-playground",
    "changelog:update": "../../scripts/update-changelog.sh @metamask/react-native-playground",
    "changelog:validate": "../../scripts/validate-changelog.sh @metamask/react-native-playground",
    "copy-wagmi-connector": "node scripts/copy-wagmi-connector.js",
    "ios": "yarn copy-wagmi-connector && expo start --ios",
    "start": "yarn copy-wagmi-connector && expo start --tunnel",
    "test": "echo \"No test specified\"",
    "test:verbose": "yarn test",
    "web": "yarn copy-wagmi-connector && expo start --web"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
