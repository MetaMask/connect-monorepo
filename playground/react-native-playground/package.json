{
  "name": "@metamask/react-native-playground",
  "version": "0.0.0",
  "private": true,
  "description": "A React Native test dapp for multichain api",
  "keywords": [
    "MetaMask",
    "Ethereum"
  ],
  "homepage": "https://github.com/MetaMask/connect-monorepo/tree/main/playground/react-native-playground#readme",
  "bugs": {
    "url": "https://github.com/MetaMask/connect-monorepo/issues"
