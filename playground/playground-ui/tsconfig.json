{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "es6",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "lib": ["DOM", "ES2020"],
    "skipLibCheck": true,
    "types": ["node"],
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
